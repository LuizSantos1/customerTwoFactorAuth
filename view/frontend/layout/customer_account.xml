<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-two-factor-auth-link"
                   ifconfig="msp_securitysuite_twofactorauth/general/enabled_customer">
                <arguments>
                    <argument name="path" xsi:type="string">twofactorauth/customer/configuration</argument>
                    <argument name="label" xsi:type="string" translate="true">2FA Configuration</argument>
                    <argument name="sortOrder" xsi:type="number">150</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
